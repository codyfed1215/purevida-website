---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
}

const {
  title,
  description = "PureVida Water Technologies provides bottleless water coolers, ice machines, and coffee systems to businesses across Texas. Save 30-80% vs bottled water delivery.",
  canonicalUrl
} = Astro.props;

const siteUrl = "https://purevidawater.com";
const fullTitle = title === "Home" ? "PureVida Water Technologies | Bottleless Water, Ice & Coffee Systems" : `${title} | PureVida Water Technologies`;
const canonical = canonicalUrl || new URL(Astro.url.pathname, Astro.site || siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={`${siteUrl}/images/og-image.jpg`} />
    <meta property="og:site_name" content="PureVida Water Technologies" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/images/og-image.jpg`} />

    <!-- Canonical -->
    <link rel="canonical" href={canonical} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <title>{fullTitle}</title>

    <!-- Schema.org LocalBusiness -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "PureVida Water Technologies",
      "description": "Bottleless water coolers, ice machines, and coffee systems for Texas businesses",
      "url": siteUrl,
      "telephone": "(888) 534-0117",
      "email": "contact@purevidawater.com",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "1607 Falcon Dr, STE 101",
        "addressLocality": "DeSoto",
        "addressRegion": "TX",
        "postalCode": "75115",
        "addressCountry": "US"
      },
      "areaServed": ["Dallas", "Fort Worth", "DFW", "Austin", "San Antonio"],
      "priceRange": "$$"
    })} />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200 shadow-lg shadow-gray-200/50">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3 group">
            <img src="/images/water-drop-logo.png" alt="PureVida" class="h-14 w-auto" />
            <span class="text-3xl font-bold tracking-tight">
              <span class="text-sky-500">Pure</span><span class="text-sky-800">Vida</span>
            </span>
          </a>

          <!-- Desktop Nav -->
          <div class="hidden md:flex items-center gap-8">
            <a href="/products" class="text-gray-700 hover:text-sky-500 font-medium transition">Systems</a>
            <a href="/locations" class="text-gray-700 hover:text-sky-500 font-medium transition">Service Areas</a>
            <a href="/about" class="text-gray-700 hover:text-sky-500 font-medium transition">FAQs</a>
            <a href="/contact" class="text-gray-700 hover:text-sky-500 font-medium transition">Contact</a>
            <button data-trial-modal class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-3 rounded-xl font-semibold transition shadow-lg shadow-sky-500/30 hover:shadow-sky-500/40 cursor-pointer">
              Request Free Trial
            </button>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-700" aria-label="Open menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>

        <!-- Mobile Nav -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <a href="/products" class="block py-2 text-gray-700 hover:text-sky-500">Systems</a>
          <a href="/locations" class="block py-2 text-gray-700 hover:text-sky-500">Service Areas</a>
          <a href="/about" class="block py-2 text-gray-700 hover:text-sky-500">FAQs</a>
          <a href="/contact" class="block py-2 text-gray-700 hover:text-sky-500">Contact</a>
          <button data-trial-modal class="block w-full mt-4 bg-sky-500 text-white text-center py-2.5 rounded-lg font-semibold cursor-pointer">
            Get Free Trial
          </button>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <!-- Free Trial Modal -->
    <div id="trial-modal" class="fixed inset-0 z-[100] hidden">
      <!-- Backdrop -->
      <div id="modal-backdrop" class="absolute inset-0 bg-black/60 backdrop-blur-sm opacity-0 transition-opacity duration-300"></div>

      <!-- Modal Content -->
      <div class="absolute inset-0 flex items-end sm:items-center justify-center p-4">
        <div id="modal-content" class="relative bg-white rounded-t-3xl sm:rounded-2xl w-full max-w-lg transform translate-y-full sm:translate-y-8 sm:scale-95 opacity-0 transition-all duration-300 ease-out">
          <!-- Close button -->
          <button id="modal-close" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>

          <div class="p-8">
            <!-- Header -->
            <div class="text-center mb-6">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-sky-100 rounded-full mb-4">
                <svg class="w-8 h-8 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900">Request Your Free Trial</h3>
              <p class="text-gray-600 mt-2">PureVida will reach out immediately to get you started.</p>
            </div>

            <!-- Form -->
            <form action="https://formspree.io/f/mwvneabd" method="POST" class="space-y-4">
              <div class="grid sm:grid-cols-2 gap-4">
                <div>
                  <input
                    type="text"
                    name="name"
                    placeholder="Your Name"
                    required
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                  />
                </div>
                <div>
                  <input
                    type="text"
                    name="company"
                    placeholder="Company Name"
                    required
                    class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                  />
                </div>
              </div>
              <div>
                <input
                  type="email"
                  name="email"
                  placeholder="Work Email"
                  required
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                />
              </div>
              <div>
                <input
                  type="tel"
                  name="phone"
                  placeholder="Phone Number"
                  required
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                />
              </div>
              <div>
                <input
                  type="text"
                  name="company_address"
                  placeholder="Company Address"
                  required
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                />
              </div>
              <div>
                <textarea
                  name="notes"
                  placeholder="Notes (Optional)"
                  rows="3"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-sky-500 transition"
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-sky-500 hover:bg-sky-600 text-white py-4 rounded-xl font-semibold text-lg transition shadow-lg shadow-sky-500/30"
              >
                Request Free Trial
              </button>
            </form>

            <!-- Trust indicators -->
            <div class="mt-6 flex items-center justify-center gap-6 text-sm text-gray-500">
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Free, No Obligations Trial
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Full Service Included
              </span>
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Highest Quality Water
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid md:grid-cols-4 gap-12">
          <!-- Brand -->
          <div class="md:col-span-1">
            <div class="mb-4">
              <img src="/images/companylogo/logo.png" alt="PureVida Water Technologies" class="h-14 w-auto brightness-0 invert" />
            </div>
            <p class="text-gray-400 text-sm">
              Bottleless water, ice, and coffee systems for Texas businesses. Serving 1,100+ customers.
            </p>
          </div>

          <!-- Systems -->
          <div>
            <p class="font-semibold mb-4">Systems</p>
            <ul class="space-y-2 text-gray-400 text-sm">
              <li><a href="/products/water-coolers" class="hover:text-sky-400 transition">Water Systems</a></li>
              <li><a href="/products/ice-machines" class="hover:text-sky-400 transition">Ice & Water Systems</a></li>
              <li><a href="/products/coffee-systems" class="hover:text-sky-400 transition">Coffee System</a></li>
            </ul>
          </div>

          <!-- Service Areas -->
          <div>
            <p class="font-semibold mb-4">Service Areas</p>
            <ul class="space-y-2 text-gray-400 text-sm">
              <li><a href="/locations/dallas" class="hover:text-sky-400 transition">Dallas-Fort Worth</a></li>
              <li><a href="/locations/austin" class="hover:text-sky-400 transition">Austin</a></li>
              <li><a href="/locations/san-antonio" class="hover:text-sky-400 transition">San Antonio</a></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <p class="font-semibold mb-4">Contact Us</p>
            <ul class="space-y-3 text-gray-400 text-sm">
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <a href="tel:+18885340117" class="hover:text-sky-400 transition">(888) 534-0117</a>
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-5 h-5 text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <a href="mailto:contact@purevidawater.com" class="hover:text-sky-400 transition">contact@purevidawater.com</a>
              </li>
            </ul>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-12 pt-8 text-center">
          <p class="text-gray-400 text-sm">&copy; {new Date().getFullYear()} PureVida Water Technologies. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <!-- Toast Notification -->
    <div id="toast" class="fixed top-6 left-1/2 -translate-x-1/2 z-[200] hidden">
      <div id="toast-inner" class="flex items-center gap-3 px-6 py-4 rounded-xl shadow-2xl text-white font-medium transition-all duration-300 opacity-0 -translate-y-4">
        <span id="toast-icon"></span>
        <span id="toast-msg"></span>
      </div>
    </div>

    <script>
      // Toast notifications
      function showToast(message, success = true) {
        const toast = document.getElementById('toast');
        const inner = document.getElementById('toast-inner');
        const icon = document.getElementById('toast-icon');
        const msg = document.getElementById('toast-msg');

        inner.className = `flex items-center gap-3 px-6 py-4 rounded-xl shadow-2xl text-white font-medium transition-all duration-300 opacity-0 -translate-y-4 ${success ? 'bg-green-600' : 'bg-red-600'}`;
        icon.innerHTML = success
          ? '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>'
          : '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>';
        msg.textContent = message;

        toast.classList.remove('hidden');
        setTimeout(() => {
          inner.classList.remove('opacity-0', '-translate-y-4');
          inner.classList.add('opacity-100', 'translate-y-0');
        }, 10);

        setTimeout(() => {
          inner.classList.remove('opacity-100', 'translate-y-0');
          inner.classList.add('opacity-0', '-translate-y-4');
          setTimeout(() => toast.classList.add('hidden'), 300);
        }, 4000);
      }

      // Intercept Formspree submissions
      document.querySelectorAll('form[action*="formspree.io"]').forEach(form => {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          const btn = form.querySelector('button[type="submit"]');
          const originalText = btn.textContent;
          btn.disabled = true;
          btn.textContent = 'Sending...';

          try {
            const res = await fetch(form.action, {
              method: 'POST',
              body: new FormData(form),
              headers: { 'Accept': 'application/json' }
            });

            if (res.ok) {
              showToast('Message sent! PureVida will reach out shortly.', true);
              form.reset();
              // Close modal if inside one
              const modal = form.closest('#trial-modal');
              if (modal) setTimeout(() => closeModal(), 1500);
            } else {
              showToast('Something went wrong. Please try again.', false);
            }
          } catch {
            showToast('Network error. Please try again.', false);
          }

          btn.disabled = false;
          btn.textContent = originalText;
        });
      });

      // Phone number formatting
      function formatPhone(value) {
        const digits = value.replace(/\D/g, '').substring(0, 10);
        if (digits.length === 0) return '';
        if (digits.length <= 3) return `(${digits}`;
        if (digits.length <= 6) return `(${digits.slice(0, 3)}) ${digits.slice(3)}`;
        return `(${digits.slice(0, 3)}) ${digits.slice(3, 6)}-${digits.slice(6)}`;
      }

      document.querySelectorAll('input[type="tel"]').forEach(input => {
        input.addEventListener('input', (e) => {
          const pos = e.target.selectionStart;
          const prev = e.target.value;
          e.target.value = formatPhone(e.target.value);
          // Keep cursor in a reasonable position
          if (e.target.value.length > prev.length && pos < prev.length) {
            e.target.setSelectionRange(pos + 1, pos + 1);
          }
        });
      });

      // Mobile menu
      const menuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      menuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Trial Modal
      const modal = document.getElementById('trial-modal');
      const backdrop = document.getElementById('modal-backdrop');
      const content = document.getElementById('modal-content');
      const closeBtn = document.getElementById('modal-close');

      function openModal() {
        modal?.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        // Trigger animation
        setTimeout(() => {
          backdrop?.classList.remove('opacity-0');
          backdrop?.classList.add('opacity-100');
          content?.classList.remove('translate-y-full', 'sm:translate-y-8', 'sm:scale-95', 'opacity-0');
          content?.classList.add('translate-y-0', 'sm:translate-y-0', 'sm:scale-100', 'opacity-100');
        }, 10);
      }

      function closeModal() {
        backdrop?.classList.remove('opacity-100');
        backdrop?.classList.add('opacity-0');
        content?.classList.remove('translate-y-0', 'sm:translate-y-0', 'sm:scale-100', 'opacity-100');
        content?.classList.add('translate-y-full', 'sm:translate-y-8', 'sm:scale-95', 'opacity-0');
        document.body.style.overflow = '';
        setTimeout(() => {
          modal?.classList.add('hidden');
        }, 300);
      }

      // Open modal on trial button clicks
      document.querySelectorAll('[data-trial-modal]').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          openModal();
        });
      });

      // Close handlers
      closeBtn?.addEventListener('click', closeModal);
      backdrop?.addEventListener('click', closeModal);
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeModal();
      });
    </script>
  </body>
</html>
