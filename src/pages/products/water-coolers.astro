---
import Layout from '../../layouts/Layout.astro';

const products = [
  {
    id: "pv1w",
    name: "PV1w",
    subtitle: "Countertop",
    image: "/images/products/PV1w.png",
    description: "Compact countertop water purifier perfect for small offices and reception areas. Touchless operation with advanced filtration.",
    highlights: ["Touchless sensor", "Self-cleaning", "Countertop size", "Hot & Cold"],
  },
  {
    id: "pv2w",
    name: "PV2w",
    subtitle: "Standard",
    image: "/images/products/PV2w.png",
    description: "Freestanding water purifier with reverse osmosis filtration. Glass front panel with capacitive touch sensors.",
    highlights: ["Reverse osmosis", "Glass front", "Leak-stop tech", "Hot & Cold"],
  },
  {
    id: "pv3w",
    name: "PV3w",
    subtitle: "Premium",
    image: "/images/products/PV3w.png",
    description: "Premium touchless water purifier with LCD screen showing real-time system status. 3-gallon high-capacity cold tank.",
    highlights: ["LCD display", "3 gal cold tank", "Touchless", "Hot & Cold"],
  },
  {
    id: "pv4w",
    name: "PV4w",
    subtitle: "High Capacity",
    image: "/images/products/PV4w.png",
    description: "Next-generation hydration hub with 15.4\" touchscreen. Largest cold tank on the market at 5 gallons with hyper-chill technology.",
    highlights: ["15\" touchscreen", "5 gal cold tank", "UV lights", "Hot, Cold & Ambient"],
    featured: true
  }
];
---

<Layout
  title="Water Coolers"
  description="Bottleless water coolers for Texas businesses. Touchless, self-cleaning, and cost-effective. Free installation and service included."
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-sky-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900">Water Coolers</h1>
        <p class="mt-4 text-xl text-gray-600">
          Touchless, self-cleaning, unlimited fresh water. Pick your size.
        </p>
      </div>
    </div>
  </section>

  <!-- Product Selector -->
  <section class="py-12 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Product Tabs -->
      <div class="flex flex-wrap justify-center gap-3 mb-12">
        {products.map((product, index) => (
          <button
            data-product={product.id}
            class={`product-tab px-6 py-3 rounded-xl font-semibold transition-all ${index === 0 ? 'bg-sky-500 text-white shadow-lg' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
          >
            <span class="block text-lg">{product.name}</span>
            <span class="block text-sm opacity-80">{product.subtitle}</span>
          </button>
        ))}
      </div>

      <!-- Product Display -->
      {products.map((product, index) => (
        <div
          id={`product-${product.id}`}
          class={`product-panel grid md:grid-cols-2 gap-12 items-center ${index === 0 ? '' : 'hidden'}`}
        >
          <!-- Image -->
          <div class="flex justify-center">
            <div class="w-[280px] h-[450px] flex items-center justify-center">
              <img
                src={product.image}
                alt={product.name}
                class="max-h-full max-w-full object-contain drop-shadow-xl"
              />
            </div>
          </div>

          <!-- Info -->
          <div>
            <div class="flex items-center gap-3 mb-2">
              <h2 class="text-3xl font-bold text-gray-900">{product.name}</h2>
              {product.featured && (
                <span class="bg-sky-100 text-sky-700 text-sm font-semibold px-3 py-1 rounded-full">
                  Most Popular
                </span>
              )}
            </div>
            <p class="text-xl text-sky-600 font-medium mb-6">{product.subtitle}</p>

            <p class="text-gray-600 text-lg mb-8">{product.description}</p>

            <!-- Highlights -->
            <div class="grid grid-cols-2 gap-3 mb-8">
              {product.highlights.map((highlight) => (
                <div class="flex items-center gap-2 text-gray-700">
                  <svg class="w-5 h-5 text-sky-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {highlight}
                </div>
              ))}
            </div>

            <a href="/contact" class="inline-flex items-center bg-sky-500 hover:bg-sky-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition shadow-lg shadow-sky-500/30">
              Get a Free Trial
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- All Systems Include -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Every System Includes</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Free Install</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Filter Changes</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Maintenance</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Support</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    const tabs = document.querySelectorAll('.product-tab');
    const panels = document.querySelectorAll('.product-panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const productId = tab.getAttribute('data-product');

        // Update tabs
        tabs.forEach(t => {
          t.classList.remove('bg-sky-500', 'text-white', 'shadow-lg');
          t.classList.add('bg-gray-100', 'text-gray-700');
        });
        tab.classList.remove('bg-gray-100', 'text-gray-700');
        tab.classList.add('bg-sky-500', 'text-white', 'shadow-lg');

        // Update panels
        panels.forEach(panel => {
          panel.classList.add('hidden');
        });
        document.getElementById(`product-${productId}`)?.classList.remove('hidden');
      });
    });
  </script>
</Layout>
