---
import Layout from '../../layouts/Layout.astro';

const products = [
  {
    id: "pv12c",
    name: "PV12c",
    subtitle: "Coffee & Beverage",
    image: "/images/products/PV12c.png",
    featured: true,
    specs: [
      { label: "Form", value: "Countertop or Freestanding" },
      { label: "Functionality", value: "Bean to Cup, Single Serve, Coffee, Chocolate, Vanilla, Milktopping" },
      { label: "Dimensions", value: "36\"H x 17\"W x 22\"D | 70\"H x 17\"W x 22\"D" },
      { label: "Storage", value: "5 lbs. Coffee Bean Cannister 1 | 5 lbs. Coffee Bean Cannister 2" },
      { label: "Dispense Height", value: "7\"" },
      { label: "Weight", value: "91 lbs. / 115 lbs." },
      { label: "Recommended Usage", value: "Less than 30 Drinkers per System" },
    ],
  }
];
---

<Layout
  title="Coffee System"
  description="Commercial coffee machines for Texas businesses. Bean-to-cup freshness with touchscreen operation. Free, no obligations trial. Full service included."
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-sky-50 to-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900">Coffee System</h1>
        <p class="mt-4 text-xl text-gray-600">
          Caf√©-quality coffee in your breakroom. Bean-to-cup freshness, zero effort.
        </p>
      </div>
    </div>
  </section>

  <!-- Product Display -->
  <section class="py-12 bg-white">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      {products.map((product) => (
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Image -->
          <div class="flex justify-center">
            <div class="w-[280px] h-[450px] flex items-center justify-center">
              <img
                src={product.image}
                alt={product.name}
                class="max-h-full max-w-full object-contain drop-shadow-xl"
              />
            </div>
          </div>

          <!-- Info -->
          <div>
            <div class="flex items-center gap-3 mb-2">
              <h2 class="text-3xl font-bold text-gray-900">{product.name}</h2>
              {product.featured && (
                <span class="bg-sky-100 text-sky-700 text-sm font-semibold px-3 py-1 rounded-full">
                  Featured
                </span>
              )}
            </div>
            <p class="text-xl text-sky-600 font-medium mb-6">{product.subtitle}</p>

            {product.specs ? (
              <ul class="space-y-2 mb-8">
                {product.specs.map((spec) => (
                  <li class="flex text-gray-700">
                    <span class="font-semibold mr-2">{spec.label}:</span>
                    <span>{spec.value}</span>
                  </li>
                ))}
              </ul>
            ) : (
              <>
                <p class="text-gray-600 text-lg mb-8">{product.description}</p>
                <div class="grid grid-cols-2 gap-3 mb-8">
                  {product.highlights.map((highlight) => (
                    <div class="flex items-center gap-2 text-gray-700">
                      <svg class="w-5 h-5 text-sky-500 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      {highlight}
                    </div>
                  ))}
                </div>
              </>
            )}

            <!-- Drink Options -->
            <div class="bg-gray-50 rounded-xl p-6 mb-8">
              <h3 class="font-semibold text-gray-900 mb-3">Available Drinks</h3>
              <div class="flex flex-wrap gap-2">
                {["Coffee", "Espresso", "Americano", "Latte", "Cappuccino", "Hot Chocolate", "Hot Water", "More"].map((drink) => (
                  <span class="bg-white px-3 py-1 rounded-full text-sm text-gray-700 border border-gray-200">{drink}</span>
                ))}
              </div>
            </div>

            <button data-trial-modal class="inline-flex items-center bg-sky-500 hover:bg-sky-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition shadow-lg shadow-sky-500/30 cursor-pointer">
              Request Free Trial
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </button>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Coffee Liaison Explainer -->
  <section class="py-12 bg-white border-t border-gray-100">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">Your Coffee Liaison</h3>
      <p class="text-lg text-gray-600">
        The PureVida Team will train your Coffee Liaison. PureVida suggests you identify this Coffee Liaison to be someone who will order product, refill canisters, and do the very quick and simple daily and weekly cleaning functions that only take a few minutes. The PureVida Team will fully train and support your Coffee Liaison.
      </p>
    </div>
  </section>

  <!-- All Systems Include -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Every System Includes</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Free Trial</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Filter Changes</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">Full-Service</p>
        </div>
        <div class="text-center">
          <div class="bg-white rounded-full w-14 h-14 flex items-center justify-center mx-auto mb-3 shadow">
            <svg class="w-7 h-7 text-sky-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="font-medium text-gray-900">PureVida Replacement System Guarantee</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
