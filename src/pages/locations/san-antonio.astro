---
import Layout from '../../layouts/Layout.astro';

const city = "San Antonio";
const region = "San Antonio Metro";

const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://purevidawater.com/" },
    { "@type": "ListItem", "position": 2, "name": "Service Areas", "item": "https://purevidawater.com/locations" },
    { "@type": "ListItem", "position": 3, "name": city }
  ]
});
---

<Layout
  title={`Bottleless Water Coolers ${city} TX`}
  description={`PureVida provides bottleless water cooler rental and service in ${city}, Texas. Save 30-80% vs bottled water delivery. Free, no obligations trial.`}
>
  <script type="application/ld+json" set:html={breadcrumbSchema} />

  <!-- Hero -->
  <section class="bg-gradient-to-br from-sky-50 to-white py-8 lg:py-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <nav class="text-sm mb-4">
            <a href="/" class="text-gray-500 hover:text-sky-500">Home</a>
            <span class="mx-2 text-gray-400">/</span>
            <a href="/locations" class="text-gray-500 hover:text-sky-500">Locations</a>
            <span class="mx-2 text-gray-400">/</span>
            <span class="text-gray-900">{city}</span>
          </nav>
          <h1 class="text-4xl lg:text-5xl font-bold text-gray-900">
            Bottleless Water Coolers in <span class="text-sky-500">{city}</span>
          </h1>
          <p class="mt-6 text-xl text-gray-600">
            PureVida serves businesses throughout the {region}. From Downtown San Antonio to New Braunfels, Boerne to Schertz—PureVida has you covered.
          </p>

          <div class="mt-8 flex flex-col sm:flex-row gap-4">
            <button data-trial-modal class="inline-flex items-center justify-center bg-sky-500 hover:bg-sky-600 text-white px-8 py-4 rounded-xl font-semibold text-lg transition shadow-lg shadow-sky-500/30 cursor-pointer">
              Request Free Trial
            </button>
            <a href="tel:+18885340117" class="inline-flex items-center justify-center border-2 border-gray-300 hover:border-sky-500 text-gray-700 hover:text-sky-500 px-8 py-4 rounded-xl font-semibold text-lg transition">
              (888) 534-0117
            </a>
          </div>
        </div>

        <div class="bg-gray-100 rounded-2xl p-8">
          <img src="/images/products/PV4w.png" alt={`Water cooler service in ${city}`} class="max-h-80 mx-auto object-contain" />
        </div>
      </div>
    </div>
  </section>

  <!-- Local Benefits -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Why {city} Businesses Choose PureVida
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-xl p-6">
          <div class="bg-sky-100 rounded-lg p-3 w-fit mb-4">
            <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Fast Local Service</h3>
          <p class="mt-2 text-gray-600">
            Fast service available throughout {city} and the {region}. PureVida's local technicians are never far away.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="bg-sky-100 rounded-lg p-3 w-fit mb-4">
            <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">All Business Types</h3>
          <p class="mt-2 text-gray-600">
            From Riverwalk hospitality to medical centers, Alamo Heights offices to New Braunfels warehouses—PureVida serves them all.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6">
          <div class="bg-sky-100 rounded-lg p-3 w-fit mb-4">
            <svg class="w-6 h-6 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900">Texas Water Experts</h3>
          <p class="mt-2 text-gray-600">
            PureVida understands {city}'s water quality. PureVida's filtration systems are optimized for local conditions.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-3">
        Areas PureVida Serves in the {region}
      </h2>
      <p class="text-center text-lg text-gray-600 mb-8">
        West to Hondo, East to Seguin, North to Boerne, South to Pleasanton
      </p>
      <div class="flex flex-wrap justify-center gap-3">
        {["Downtown San Antonio", "Alamo Heights", "Stone Oak", "The Pearl", "New Braunfels", "Boerne", "Schertz", "Cibolo", "Universal City", "Converse", "Live Oak", "Selma", "Seguin", "Floresville", "Helotes", "Leon Valley"].map((area) => (
          <span class="bg-white px-4 py-2 rounded-full text-gray-700 border border-gray-200">{area}</span>
        ))}
        <span class="bg-sky-500 px-4 py-2 rounded-full text-white font-semibold">And More</span>
      </div>
    </div>
  </section>

  <!-- Explore Our Systems -->
  <section class="py-12 bg-white border-t border-gray-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">Systems Available in {city}</h3>
      <div class="grid sm:grid-cols-3 gap-6">
        <a href="/products/water-coolers" class="group bg-gray-50 hover:bg-sky-50 rounded-xl p-6 transition">
          <p class="font-semibold text-gray-900 group-hover:text-sky-600 transition">Water Coolers</p>
          <p class="text-gray-600 text-sm mt-1">Bottleless, touchless purifiers</p>
        </a>
        <a href="/products/ice-machines" class="group bg-gray-50 hover:bg-sky-50 rounded-xl p-6 transition">
          <p class="font-semibold text-gray-900 group-hover:text-sky-600 transition">Ice Machines</p>
          <p class="text-gray-600 text-sm mt-1">Filtered ice and water on demand</p>
        </a>
        <a href="/products/coffee-systems" class="group bg-gray-50 hover:bg-sky-50 rounded-xl p-6 transition">
          <p class="font-semibold text-gray-900 group-hover:text-sky-600 transition">Coffee Systems</p>
          <p class="text-gray-600 text-sm mt-1">Bean-to-cup office coffee</p>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-sky-500">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white">Ready to Get Started in {city}?</h2>
      <p class="mt-4 text-sky-100 text-lg">
        Free, no obligations trial with full-service support. See why {city} businesses trust PureVida.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <button data-trial-modal class="inline-flex items-center justify-center bg-white text-sky-600 px-8 py-4 rounded-xl font-semibold text-lg hover:bg-sky-50 transition cursor-pointer">
          Request Free Trial
        </button>
        <a href="tel:+18885340117" class="inline-flex items-center justify-center border-2 border-white text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-white/10 transition">
          Call (888) 534-0117
        </a>
      </div>
    </div>
  </section>
</Layout>
